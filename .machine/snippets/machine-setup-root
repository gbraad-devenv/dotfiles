#!/bin/env -S machinefile --stdin

FROM scratch

ARG ROOTHOME="/root"

USER root

RUN git clone https://github.com/gbraad-dotfiles/upstream.git ${ROOTHOME}/.dotfiles --depth 2 \
    && cd ${ROOTHOME}/.dotfiles \
    && . ./zsh/.zshrc.d/dotfiles.zsh \
    && stow config \
    && dotfiles restow

RUN chsh -s /usr/bin/zsh
