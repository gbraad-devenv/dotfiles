#!/bin/sh
if [ ! -L "${HOME}/.config/dotfiles" ]; then
  export ZDOTDIR="${HOME}/.dotfiles/zsh/"
fi
export COLORTERM=truecolor

# If the first argument is -c, shift it off
if [ "$1" = "-c" ]; then
  shift
fi

if [ "$#" -eq 0 ]; then
  exec zsh --login
else
  exec zsh -c 'dotfiles source; "$@"' _ "$@"
fi
